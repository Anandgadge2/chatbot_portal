    "seed:users": "ts-node src/scripts/seedUsers.ts",
    "extract:zpflow": "ts-node src/scripts/extractZPAmaravatiFlow.ts",
    "seed:zpwhatsapp": "ts-node src/scripts/seedZPWhatsAppConfig.ts",
