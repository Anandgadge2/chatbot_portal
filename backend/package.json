  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:prod": "node scripts/start-prod.js",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "start:prod": "node scripts/start-prod.js",
    "kill:port": "node scripts/kill-port.js",
    "health": "node scripts/health-check.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "seed:superadmin": "ts-node src/scripts/seedSuperAdmin.ts",
    "ensure:superadmin": "ts-node src/scripts/ensureSuperAdmin.ts",
    "seed:zpamaravati": "ts-node src/scripts/seedZPAmaravati.ts",
    "seed:zpamaravati:data": "ts-node src/scripts/seedZPAmaravatiData.ts",
    "fix:zpadmin": "ts-node src/scripts/fixZPAdminPassword.ts",
    "fix:phone-id": "ts-node src/scripts/fixPhoneNumberId.ts",
