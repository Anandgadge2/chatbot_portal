    "migrate:user-uniqueness": "ts-node src/scripts/migrateUserUniqueness.ts",
    "migrate:per-company-counters": "ts-node src/scripts/migratePerCompanyCounters.ts",
    "fix:zpwhatsapp": "ts-node src/scripts/fixZPWhatsAppConfig.ts",
    "generate:sso-token": "ts-node src/scripts/generateSSOToken.ts",
    "test:email": "node test-email-direct.js",
    "test:email:assignment": "node test-email-assignment-status.js",
    "test:notifications": "node test-notifications.js",
    "test:api": "bash test-api.sh",
    "test:chatbot": "node test-chatbot-comprehensive.js"
